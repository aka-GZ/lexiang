<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">
        <!--android:background="@drawable/shap_dialog_bg"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="13dp"
                android:text="添加团队成员"
                android:textColor="#222"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingMultiplier="1.3"
                android:padding="13dp"
                android:text="请输入手机内容"
                android:background="@drawable/shap_border_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#222"
                android:textSize="14sp" />
            <!--删除操作无法撤销，您确认删除?-->
            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:padding="13dp"
                android:visibility="gone"
                android:text="对话框输入提示说明"
                android:textColor="#222"
                android:textSize="14sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_btn_height"
                android:layout_toLeftOf="@+id/center_line"
                android:background="@drawable/btn_dialog_cancel_bg"
                android:gravity="center"
                android:text="取消"
                android:textSize="14sp"
                android:textColor="#777" />

            <View
                android:id="@+id/center_line"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_btn_height"
                android:layout_toRightOf="@+id/center_line"
                android:background="@drawable/btn_dialog_ok_bg"
                android:gravity="center"
                android:text="确定"
                android:textSize="14sp"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
