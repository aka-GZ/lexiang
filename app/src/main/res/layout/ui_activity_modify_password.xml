<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:clipToPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <!--<include-->
        <!--android:value="@+value/titlebar"-->
        <!--layout="@layout/lay_titlebar" />-->
    <com.sunrun.sunrunframwork.view.title.BaseTitleLayoutView
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        app:TitlesLeftIcon="@drawable/img_title_back"
        app:TitlesText="修改密码"
        app:TitlesRightTVText="忘记密码"
        android:id="@+id/title_layout_view"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_below="@+id/title_layout_view"
        android:src="@mipmap/bg_home_touying" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout_view"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <!-- <include layout="@layout/lay_login_top" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/view_gap_4"
                android:paddingLeft="@dimen/view_gap"
                android:paddingRight="@dimen/view_gap_4"
                android:paddingTop="@dimen/view_gap_4" >

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:visibility="gone"
                    />

                <View
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/view_gap2"
                    android:layout_marginRight="@dimen/view_gap2"
                    android:visibility="gone"
                    android:background="@color/limit_line1" />

                <EditText
                    android:id="@+id/edit_old_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textColor="@color/text3"
                    android:textSize="15sp"
                      android:singleLine="true" 
                    android:hint="输入原密码"
                    />


            </LinearLayout>

            <!-- <View style="@style/login_lineStyle" /> -->
            <View
                style="@style/limit_line"
                android:layout_height="5dp"
                android:background="@color/bg"
                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/view_gap" >

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:visibility="gone"
                    />

                <View
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/view_gap2"
                    android:layout_marginRight="@dimen/view_gap2"
                    android:background="@color/limit_line1" />

                <EditText
                    android:id="@+id/edit_new_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/text3"
                    android:textSize="15sp"
                    android:hint="输入新密码"
                    android:inputType="textPassword"
                      android:singleLine="true" 
                    />
                <ImageView
                    android:id="@+id/showPwd"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- <View style="@style/login_lineStyle" /> -->
            <View
                style="@style/limit_line"
                android:layout_height="5dp"
                android:background="@color/bg"
                />

            <View
                style="@style/limit_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/view_gap" >

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:visibility="gone"
                    />

                <View
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/view_gap2"
                    android:layout_marginRight="@dimen/view_gap2"
                    android:visibility="gone"
                    android:background="@color/limit_line1" />

                <EditText
                    android:id="@+id/edit_confim_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:password="true"
                    android:hint="确认新密码"
                    android:inputType="textPassword"
                    android:textColor="@color/text3"
                    android:textSize="15sp"
                      android:singleLine="true" 
                    android:maxLength="11" />
            </LinearLayout>
            <!-- <View style="@style/login_lineStyle" /> -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_gap2"
            android:layout_marginRight="@dimen/view_gap2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text3"
                android:text="密码由6-16位字母，数字或符合组成" />
        </LinearLayout>

        <Button
            style="@style/submitBtn"
            android:id="@+id/submit"
            android:layout_marginLeft="@dimen/view_gap2"
            android:layout_marginRight="@dimen/view_gap2"
            android:layout_marginTop="20dp"
            android:text="确认"
             />


    </LinearLayout>


</RelativeLayout>